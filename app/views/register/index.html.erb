<%= form_for @user, url: {action: "create"} do |f| %>
  <%= f.label :name, "Name:" %>
  <%= f.text_field :name %>
  <%= f.label :email, "Email:" %>
  <%= f.text_field :email %>
   <%= f.label :password, "Password:" %>
  <%= f.password_field :password %>
  <%= f.label :password_confirmation, " Confirm Password:" %>
  <%= f.password_field :password_confirmation %>
  <%= f.submit "Create" %>
<% end %>